{
  "name": "makercam5",
  "version": "1.0.0",
  "description": "Port of makercam written in flash to HTML5 using PIXI",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "postinstall": "echo npm run bootstrap",
    "bootstrap": "echo lerna bootstrap --hoist --no-ci",
    "clean:build": "rimraf \"{bundles,packages,packages/canvas,packages/filters}/*/{lib,dist}\"",
    "preclean": "echo npm run clean:build",
    "clean": "echo lerna clean",
    "xpretest": "echo npm run lint && npm run build",
    "pretest": "npm run dev",
    "xtest": "floss --path test -d",
    "unit-test": "echo floss --path test",
    "coverage": "echo npm run pretest && nyc floss --path=test && nyc report --reporter=html",
    "coverage:ci": "npm run pretest && nyc floss --path=test && nyc report --reporter=text-lcov > coverage.lcov",
    "docs": "mkdirp dist && jsdoc -c jsdoc.conf.json -R README.md",
    "types": "echo npm run types:legacy && npm run types:default",
    "types:default": "echo mkdirp dist/types && jsdoc -c types/jsdoc.conf.json && node types/assemble pixi.js",
    "types:legacy": "echo mkdirp dist/types && jsdoc -c types/jsdoc-legacy.conf.json && node types/assemble pixi.js-legacy",
    "lint": "eslint *.js test bundles packages tools --ignore-path .gitignore --max-warnings 0",
    "lintfix": "npm run lint -- --fix",
    "prebuild": "npm run clean:build",
    "xbuild": "npm run build:dev",
    "xbuild:prod": "cross-env NODE_ENV=production rollup -c",
    "xbuild:dev": "rollup -c",
    "dev": "webpack --mode development",
    "test": "mochapack --mode development test/*  ",
    "build": "webpack --mode production",
    "postbuild": "echo npm run types",
    "watch": "rollup -cw",
    "lerna": "lerna",
    "predist": "rimraf dist/* && npm run build:prod && npm run types",
    "dist": "npm run docs",
    "postdist": "copyfiles -f bundles/*/dist/* dist && copyfiles -f \"packages/**/dist/*\" dist/packages",
    "prerelease": "npm run clean:build && npm test",
    "postversion": "npm run build:prod",
    "release": "lerna publish"
  },
  "pre-commit": [
    "lintfix"
  ],
  "author": "John Talbot",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.7.1",
    "babel-loader": "^8.0.6",
    "canvas": "^2.6.0",
    "jquery": "^3.4.1",
    "pkg-config": "^1.1.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "underscore": "^1.9.1",
    "webpack": "^4.41.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.1",
    "@pixi/jsdoc-template": "^2.4.2",
    "chai": "~4.0.0",
    "copyfiles": "^2.1.0",
    "electron": "^7.1.1",
    "eslint": "^5.16.0",
    "glob": "^7.1.3",
    "jsdoc": "^3.5.5",
    "jsdom": "^15.2.1",
    "minimist": "^1.2.0",
    "mocha": "^6.2.2",
    "mochapack": "^1.1.8",
    "nyc": "^14.1.1",
    "pixi.js": "^5.1.5",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "tsd-jsdoc": "^2.1.3",
    "webpack-cli": "^3.3.10"
  }
}
